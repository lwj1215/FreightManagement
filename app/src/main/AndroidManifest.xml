<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.freightmanagement">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".Base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/file_paths"
        android:requestLegacyExternalStorage="true"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.PromiseBookActivity"></activity>
        <activity
            android:name=".Activity.ResponsibilityBookActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.VehicleInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DriverInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.EmploymentContractActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CompanyRegisterActivity"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name=".Activity.CarOwnerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DriverConfigActivity"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name=".Activity.TrainingSelectActivity"
            android:screenOrientation="portrait" >


        </activity>
        <activity
            android:name=".Activity.TrainingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TrainingStartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TrainingAnswerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SWCameraStreamingActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CarInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.RoleSelectActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>