<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_doctor_sign_protocol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x280"
                android:padding="@dimen/x30">

                <RelativeLayout
                    android:id="@+id/re_pic"
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x16"
                    android:layout_weight="1"
                    android:background="@drawable/inflate_txt_bg_white">

                    <TextView
                        android:id="@+id/tv_card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@mipmap/upload_identity"
                        android:drawablePadding="@dimen/x16"
                        android:text="身份证正面照片"
                        android:textSize="@dimen/x28"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_card_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_pic_reverse"
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:background="@drawable/inflate_txt_bg_white">

                    <TextView
                        android:id="@+id/tv_card2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@mipmap/upload_identity"
                        android:drawablePadding="@dimen/x16"
                        android:text="身份证反面照片"
                        android:textSize="@dimen/x28" />

                    <ImageView
                        android:id="@+id/iv_card_revers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="真实姓名"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@null"
                    android:hint=""
                    android:textColor="@color/color_666"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="性别"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_detail_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@null"
                    android:hint=""
                    android:paddingRight="@dimen/x30"
                    android:textColor="@color/color_666"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:visibility="gone"
                android:background="@color/gray_background" />

            <LinearLayout
                android:id="@+id/ll_current_address"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="出生日期"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint=""
                    android:maxLines="2"
                    android:paddingRight="@dimen/x30"
                    android:textColor="@color/color_666"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="身份证号"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@null"
                    android:hint=""
                    android:textColor="@color/color_666"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/x28" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_gravity="bottom"
                android:background="@color/gray_background" />
            <RelativeLayout
                android:id="@+id/re_driver_pic"
                android:layout_width="@dimen/x400"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/x200"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/inflate_txt_bg_white">

                <TextView
                    android:id="@+id/tv_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/upload_identity"
                    android:drawablePadding="@dimen/x16"
                    android:text="驾驶证正页照片"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_driver_front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

<!--                    android:visibility="gone"-->
                <ImageView
                    android:id="@+id/close_driver_Font"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_oreder_remark_delete"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lin_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="上岗证号码"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/tv_workid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/x28" />

                <ImageView
                    android:id="@+id/img_sign"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="上岗证有效期"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text=""
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="岗前培训情况"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="时间"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_sign_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="2020/08/4"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"

                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="成绩"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_sign_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="60分"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="签约车辆:"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="车牌号:"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_sign_cph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="KE8581"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"

                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="车辆品牌:"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_sign_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Jeep"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="型号:"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_sign_xh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="45sa"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/x28"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray_background" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
